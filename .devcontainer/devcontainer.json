{
	"name": "C++",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"],
		
	"customizations": {
		"vscode": {
			"settings": {},
			
			"extensions": [
				"ms-vscode.cpptools"
			]
		}
	},

	"postCreateCommand": "mkdir /workspaces/webrtc && cd /workspaces/webrtc && fetch --no-history webrtc",
	"forwardPorts": [8000],
	"remoteUser": "vscode"
}
